<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:background="@color/black">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/banner_bg_2"
        android:orientation="vertical">
        <LinearLayout
            android:weightSum="2"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_user"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="username"
                android:textSize="13dp"
                android:textStyle="italic"/>
            <TextView
                android:id="@+id/tv_date"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:textStyle="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="4/5/2023"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_foreground"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Name post"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:textColor="@color/teal_200"/>
                <TextView
                    android:id="@+id/tv_content"
                    android:lines="3"
                    android:layout_marginTop="7dp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Noi dung bai viet. Noi dung bai viet. Noi dung bai viet. Noi dung bai viet. Noi dung bai viet. Noi dung bai viet."
                     />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:weightSum="15"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_weight="1"
                android:id="@+id/icon"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@drawable/baseline_remove_red_eye_24"
                android:layout_marginLeft="10dp"
                app:tint="#E3DADA"/>
            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_view"
                android:textColor="@color/teal_200"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="700"/>
            <TextView
                android:layout_weight="12"
                android:id="@+id/tv_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Danh muc"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                />
            <RatingBar
                android:id="@+id/rt_bar"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:progressTint="#FF9800"
                style="?android:attr/ratingBarStyleSmall"
                />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>